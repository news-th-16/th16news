<div class="card shadow small">
    <div class="card-header">
        <h5 class="card-text">Quản lý danh mục</h2>
    </div>
    <div class="card-body">

        <div style="float:right" class="mb-3">
            <button class="btn btn-outline-success btn-sm" data-toggle="modal" data-target="#addcat_dialog"
                type="button">
                <i class="fa fa-plus" aria-hidden="true"></i> Thêm danh mục
            </button>
        </div>

        <table id="tb_data" class="table table-bordered table-hover mt-4">
            <thead>
                <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Danh mục</th>
                    <th scope="col">Số bài viết</th>
                    <th scope="col" class="text-center" style="width: 300px;">
                        <i class="fa fa-wrench" aria-hidden="true"></i> Tùy chỉnh
                    </th>
                </tr>
            </thead>
            <tbody>
                {{#each this.categories}}
                <tr>
                    <td style="display:none">{{_id}}</td>
                    <td>{{counter @index}}</td> 
                    <td>{{name}}</td>
                    <td></td>
                    <td>
                        <a href="javascript:void(0)"> Chi tiết</a>
                        <span> | </span>
                        <a href="javascript:void(0)" onclick="edit('{{@index}}' )"> Chỉnh sửa </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="addcat_dialog" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm mới danh mục</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div>
                        <label class="control-label">Tên danh mục</label>
                        <span class="text-danger" id="valid_catname" style="display:none;">Không bỏ trống mục này</span>
                        <div>
                            <input id="catname" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <button id="addcat" class="btn btn-primary">Thêm</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="success_dialog" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document" style="width: 300px;">
        <div class="modal-content text-center bg-success">
            <h6 class="modal-title text-white" style="padding: 16px 0px;">Thành công!</h6>
        </div>
    </div>
</div>

<div class="modal fade" id="editcat_dialog" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chỉnh sửa danh mục</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div>
                        <label class="control-label">Tên danh mục</label>
                        <span class="text-danger" id="valid_catname" style="display:none;">Không bỏ trống mục này</span>
                        <div>
                            <input id="new_catname" class="form-control" />
                            <input id="catid" style="display: none" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <button id="editcat" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#addcat').on('click', function () {

            if ($('#catname').val() == '') {
                $('#valid_catname').css({ 'display': 'inline-block' })
            }

            else {
                var data = {
                    "name": $('#catname').val(),
                };

                $.ajax({
                    type: 'POST',
                    url: '/admin/category/insert',
                    data: JSON.stringify(data),
                    contentType: 'application/json',
                    dataType: 'json',
                    success: function (res, text, xhr) {

                        if (xhr.status == 200) {
                            $('#addcat_dialog').modal('toggle');
                            $('#catname').val("");

                            var count = $('#tb_data tbody tr').length + 1;

                            $('#tb_data tbody').append($('<tr>')
                                .append($('<td>')
                                    .css({ 'display': 'none' })
                                    .text(res._id))
                                .append($('<td>')
                                    .text(count))
                                .append($('<td>')
                                    .text(res.name))
                                .append($('<td>')
                                    .text(""))
                                .append($('<td>')
                                    .append($('<a href="javascript:void(0)">')
                                        .on('click', function () {
                                            //Do Something later
                                        })
                                        .text('Chi tiết'))
                                    .append($('<span>')
                                        .text(' | '))
                                    .append($('<a href="javascript:void(0)">')
                                        .on('click', function () {
                                            edit(res._id, res.name);
                                        })
                                        .text('Chỉnh sửa'))));

                            NotifySuccess();
                        }
                    },
                })
            }
        })

        $('#editcat').on('click', function () {
            var newname = $('#new_catname').val();
            var data = {
                "_id": $('#catid').val(),
                "name": newname,
            }

            $.ajax({
                type: 'POST',
                url: '/admin/category/update',
                data: JSON.stringify(data),
                contentType: 'application/json',
                dataType: 'json',
                success: function (res, textStatus, xhr) {
                    if (xhr.status == 200) {
                        $('#editcat_dialog').modal('toggle');

                        var row = $('#tb_data tbody tr').eq(row_index);
                        console.log(row.text());
                        var cell = row.find('td').eq(2);
                        console.log(cell.text());
                        cell.text(newname)

                        NotifySuccess();
                    }
                }
            })
        })
    });

    var row_index;

    function edit(index) {
        row_index = index;

        var row = $('#tb_data tbody tr').eq(index);
        var name = row.find('td').eq(2).text();
        var id = row.find('td').eq(0).text();

        $('#new_catname').val(name);
        $('#catid').val(id);
        $('#editcat_dialog').modal('toggle');
    }

    function NotifySuccess() {
        $('#success_dialog').modal('toggle');
        setTimeout(function () {
            $('#success_dialog').modal('toggle');
        }, 1000);
    }
</script>