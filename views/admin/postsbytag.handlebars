<title>{{title}}</title>
<div class="card shadow small">
    <div class="card-header">
        <h5 class="card-text">Quản lý bài viết danh mục: {{this.tag.name}}</h2>
    </div>
    <div id="tagslug" style="display: none;">{{this.tag.slug}}</div>
    <div class="card-body">
        <h6 class="card-title">
            <i class="fa fa-pencil" aria-hidden="true"></i> Xem bài viết:
            <span>
                <select id="type" class="round form-control small" style="width: 130px; display:inline-block">
                    <option value="true">Đã duyệt</option>
                    <option value="false" {{#if this.flag}} selected {{/if}}>Chưa duyệt</option>
                </select>
            </span>
            <button id="filter" class="btn btn-light btn-outline-dark btn-sm ml-3" style="margin-top:-3px;"
                type="button">
                <i class="fa fa-eye" aria-hidden="true"></i> Xem
            </button>
        </h6>

        <div class="row">
            {{#each this.posts}}
            <div class="col-sm-4 mt-3">
                <div class="card h-100 shadow-sm">
                    <div>
                        <img src="{{{image}}}" alt="" title="" class="car-img-top">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{title}}</h5>
                    </div>
                    <div class="card-footer text-muted text-center">
                        <a class="btn btn-light btn-outline-primary btn-sm ml-4" role="button"
                            href="/admin/watch-post/{{_id}} ">
                            <i class="fa fa-eye" aria-hidden="true"></i>
                            Chi tiết
                        </a>
                    </div>

                </div>
            </div>
            {{/each}}
        </div>
        {{#compare this.nPages  0 context=this operator=">"}}
        <div class="row">
            <div class="col-sm-12 mt-4">
                <nav aria-label="...">
                    <ul class="pagination">
                        {{#compare page  1 operator="=="}}
                        <li class="page-item  disabled">
                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                        </li>
                        <li>
                            {{this.prePage}}
                        </li>
                        {{/compare}}
                        {{#compare page  1 context=this operator=">"}}
                        <li class="page-item ">
                            <a class="page-link" href="?page={{this.prePage}}">Previous</a>
                        </li>
                        <li>
                        </li>
                        {{/compare}}
                        {{#each this.pages}}
                        <li class="page-item {{#if active}} active {{/if}}">
                            <a class="page-link" href="?page={{value}}">{{value}}</a>
                        </li>
                        {{/each}}
                        {{#compare page  nPages context=this operator="<"}}
                        <li class="page-item">
                            <a class="page-link" href="?page={{this.nextPage}}">Next</a>
                        </li>
                        {{/compare}}
                        {{#compare page  nPages operator=">="}}
                        <li class="page-item  disabled">
                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Next</a>
                        </li>
                        {{/compare}}
                    </ul>
                </nav>
            </div>
        </div>
        {{/compare}}
    </div>
</div>


<script type="text/javascript">

    $(document).ready(function () {
        $('#filter').on('click', function () {
            var type = $('#type option:selected').val();
            var tagslug = $('#tagslug').text();
            
            if (type == 'true') {                
                $(location).attr('href', `/admin/tag/${tagslug}/posts`);
            }
            else {
                $(location).attr('href', `/admin/tag/${tagslug}/posts/unpublished`);
            }
        })
    });
</script>