<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="noindex, nofollow">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheet/login.css">
</head>

<body class="hold-transaction login-page">
    <div class="login-box">
        <div class="login-box-body" style="border-radius: 8px;">
            <p class="login-box-msg">Nhập vào địa chỉ email để khôi phục mật khẩu:
                <form method="POST" action="/account/sendmail"><input type="hidden" name="returnUrl">
                    <div class="help-block"><span class="text-primary"></span></div>
                    <div class="form-group has-feedback">
                        <input class="form-control" type="email" placeholder="Email" name="email">
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    </div>
                    <div class="submit" >
                        <button class="btn btn-primary btn-block btn-flat" type="submit">Xác nhận</button>
                    </div>
                </form>
            </p>
        </div>
    </div>
    <div style="clear: both;"></div>

    <script>
        $(function() {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20' // optional
            });
        });

        const local = localStorage['login'] || {};
        if (local.isRemember) {
            $('input').iCheck('check');
        }

        $('input').on('ifChecked', function(e) {
            local.isRemember = true;
            localStorage['login'] = local;
        })
    </script>
</body>

</html>
